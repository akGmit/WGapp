package gui;

import java.awt.BorderLayout;
import java.awt.EventQueue;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.event.EventListenerList;
import client.ReadServer;
import javax.swing.JTextPane;

public class M extends JFrame {

  private JPanel contentPane;
  private EventListenerList listenerList = new EventListenerList();

  public M() {
    setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    setBounds(100, 100, 450, 300);
    contentPane = new JPanel();
    contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
    contentPane.setLayout(new BorderLayout(0, 0));
    setContentPane(contentPane);
    
    JTextPane textPane = new JTextPane();
    contentPane.add(textPane, BorderLayout.CENTER);
    
    textPane.addReadServerListener()
  }
  
  public void fireEvent(ReadServer event) {
    Object[] listeners = listenerList.getListenerList();
    
    for(int i = 0; i < listeners.length; i++) {
      if(listeners[i] == ReadServerListener.class) {
        ((ReadServerListener)listeners[i]).readServer(event);
      }
    }
  }
  
  public void addReadServerListener(ReadServerListener listener) {
    listenerList.add(ReadServerListener.class, listener);
  }

}
