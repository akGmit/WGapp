<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
		minWidth="-Infinity" prefHeight="121.0" prefWidth="297.0" 
				xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Enter user name for this session">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="userName" alignment="CENTER" promptText="Enter user name here">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="setUserBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0" text="Set User Name"
      	disable="${userName.text.empty}"/>
   </children>
</VBox>
