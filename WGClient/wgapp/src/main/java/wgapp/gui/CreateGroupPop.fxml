<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="183.0"
	prefWidth="384.0" xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox alignment="CENTER" prefHeight="35.0" prefWidth="384.0">
			<children>
				<Label text="Create new work group here." />
			</children>
		</HBox>
		<GridPane alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					maxWidth="155.0" minWidth="10.0" prefWidth="93.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					maxWidth="231.0" minWidth="10.0" prefWidth="231.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Name:" />
				<Label text="Password:" GridPane.rowIndex="1" />
				<Label text="Description:" GridPane.rowIndex="2" />
				<TextField fx:id="wgName" GridPane.columnIndex="1" />
				<TextField fx:id="wgPassword" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
				<TextField fx:id="wgDescription" GridPane.columnIndex="1"
					GridPane.rowIndex="2" />
			</children>
			<VBox.margin>
				<Insets left="30.0" right="30.0" />
			</VBox.margin>
		</GridPane>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="384.0"
			spacing="15.0">
			<children>
				<Button fx:id="wgCreate" mnemonicParsing="false"
					text="Create"
					disable="${wgName.text.empty || wgPassword.text.empty}" />
				<Button fx:id="wgCancel" mnemonicParsing="false"
					cancelButton="true" text="Cancel" />
			</children>
		</HBox>
	</children>
</VBox>
